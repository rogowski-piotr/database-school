@model Projekt_Szkola.Models.Przedmiot

@{
    ViewData["Title"] = "Edytuj przedmiot";
}

<h1>Edytuj</h1>

</br>

<h4>Przedmiot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PrzedmiotID" />
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                Dla Klasy
                <input asp-for="DlaKlasy" class="form-control" />
                <span asp-validation-for="DlaKlasy" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ilość godzin (tygodniowo)
                <input asp-for="LiczbaGodzinTygodniowo" class="form-control" />
                <span asp-validation-for="LiczbaGodzinTygodniowo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
