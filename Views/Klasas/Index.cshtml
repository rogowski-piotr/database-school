@model IEnumerable<Projekt_Szkola.Models.Klasa>

@{
    ViewData["Title"] = "Klasy";
}

<h1>Klasy</h1>

<p>
    <a asp-action="Create">Dodaj nową klasę</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KlasaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nauczyciel) 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KlasaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nauczyciel.Imie)
                @Html.DisplayFor(modelItem => item.Nauczyciel.Nazwisko)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KlasaID">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.KlasaID">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.KlasaID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
