@model Projekt_Szkola.Models.Klasa

@{
    ViewData["Title"] = "Edytuj klase";
}

<h1>Edytuj</h1>

<h4>klase</h4>
</br>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KlasaID" />
            <div class="form-group">
                <label asp-for="Sala" class="control-label"></label>
                <input asp-for="Sala" class="form-control" />
                <span asp-validation-for="Sala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NauczycielID" class="control-label"></label>
                <select asp-for="NauczycielID" class="form-control" asp-items="ViewBag.NauczycielID"></select>
                <span asp-validation-for="NauczycielID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
