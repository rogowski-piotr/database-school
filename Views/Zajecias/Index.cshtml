@model IEnumerable<Projekt_Szkola.Models.Zajecia>

@{
    ViewData["Title"] = "Zajęcia";
}

<h1>Zajęcia</h1>

<p>
    <a asp-action="Create">Dodaj nowe zajęcia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="OrderedByData">@Html.DisplayNameFor(model => model.Data)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.liczbaGodzinDzien)
            </th>
            <th>
                <a asp-action="OrderedByNauczyciel">@Html.DisplayNameFor(model => model.Nauczyciel)</a>
            </th>
            <th>
                <a asp-action="OrderedByKlasa">@Html.DisplayNameFor(model => model.Klasa)</a>
            </th>
            <th>
                <a asp-action="OrderedByPrzedmiot">@Html.DisplayNameFor(model => model.Przedmiot)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.liczbaGodzinDzien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nauczyciel.Imie)
                @Html.DisplayFor(modelItem => item.Nauczyciel.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klasa.KlasaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Przedmiot.Nazwa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ZajeciaID">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.ZajeciaID">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.ZajeciaID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
